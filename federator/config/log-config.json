{
    "appenders": {
        "file": {
            "type": "file",
            "filename": "/app/log/federator.log",
            "maxLogSize": 10485760,
            "backups": 3,
            "compress": true,
            "mode": "0777",
            "daysToKeep": 2
        },
        "console": {
            "type": "console"
        }
    },
    "categories": {
        "default": {
            "appenders": [
                "file",
                "console"
            ],
            "level": "trace"
        }
    }
}